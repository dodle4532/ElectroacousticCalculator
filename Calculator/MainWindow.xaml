<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Calculator.Views"
        Title="Электроакустический калькулятор" 
        Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#FFE5F0FF"
        WindowState="Maximized"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5,3,5,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левое меню -->
        <Border Grid.Column="0" 
                Background="#FF2D2D30" 
                BorderBrush="#FF007ACC" 
                BorderThickness="0,0,2,0">
            <ScrollViewer VerticalScrollBarVisibility="Disabled">
                <StackPanel Margin="10">

                    <TextBlock Text="ЭЛЕКТРОАКУСТИЧЕСКИЙ КАЛЬКУЛЯТОР (ver 0.2.2)" 
                               Foreground="#FF007ACC" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="5,10,5,20" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <!-- Кнопки разделов -->
                    <Button x:Name="btnSpeakerParams" 
                            Click="MenuButton_Click"
                            Tag="SpeakerParams"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔊" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Параметры громкоговорителя" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnMountParams" 
                            Click="MenuButton_Click"
                            Tag="MountParams"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📐" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Параметры установки" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnRoomParams" 
                            Click="MenuButton_Click"
                            Tag="RoomParams"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏢" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Параметры помещения" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnCalculatedParams" 
                            Click="MenuButton_Click"
                            Tag="CalculatedParams"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Рассчитанные параметры" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Border Height="2" Background="#FF007ACC" Margin="5,15,5,15" Opacity="0.5"/>

                    <!-- Кнопки управления -->
                    <Button x:Name="btnSave" 
                            Click="ButtonSave_Click"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Сохранить расчет" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnLoad" 
                            Click="ButtonLoad_Click"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Загрузить расчет" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnReset" 
                            Click="ButtonClear_Click"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Сброс всех полей" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Разделитель -->
        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      HorizontalAlignment="Center" 
                      Background="#FF007ACC"/>

        <!-- Рабочая область с контентом -->
        <!-- Рабочая область с контентом -->
        <Border Grid.Column="2" 
        BorderBrush="#FF007ACC" 
        BorderThickness="2" 
        CornerRadius="5" 
        Margin="10"
        Padding="10">
            <ScrollViewer x:Name="MainContentScroll" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top">
                <!-- Центрируем содержимое -->
                <ContentControl x:Name="MainContentArea" VerticalAlignment="Top"
                       />
                <!-- Ограничиваем максимальную ширину -->
            </ScrollViewer>
        </Border>
    </Grid>
</Window>