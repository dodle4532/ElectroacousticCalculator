<Window x:Class="Calculator.Forms.SpeakerConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Forms"
        mc:Ignorable="d"
        Title="Сохраненные громкоговорители" Height="380" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="298.4"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <ToolBarTray DockPanel.Dock="Top" Background="#F0F0F0" Grid.ColumnSpan="3">
                <ToolBar>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Кнопки слева, друг под другом -->
                        <Button x:Name="ButtonAdd" Grid.Row="0" Grid.Column="0"
                    ToolTip="Добавить громкоговоритель" 
                    Visibility="Visible" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Click="ButtonAdd_Click"
                    Margin="0,0,0,2">
                            <Image Source="/Image/add.png" Width="24" Height="24"/>
                        </Button>

                        <Button x:Name="ButtonBack" Grid.Row="0" Grid.Column="0"
                    ToolTip="Назад" 
                    Visibility="Collapsed" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Click="ButtonBack_Click"
                    Margin="0,0,0,2">
                            <Image Source="/Image/return.png" Width="24" Height="24"/>
                        </Button>

                        <!-- Кнопка Save - справа от них, на уровне первой строки -->
                        <Button x:Name="ButtonDel" Grid.Row="0" Grid.Column="1"
                    ToolTip="Сохранить" 
                    Visibility="Visible" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Click="ButtonDel_Click"
                    HorizontalAlignment="Right"
                    Margin="60,0,0,2">
                            <Image Source="/Image/delete.png" Width="24" Height="24"/>
                        </Button>
                        <Button x:Name="ButtonSave" Grid.Row="0" Grid.Column="1"
                    ToolTip="Удалить" 
                    Visibility="Visible" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Click="ButtonSave_Click"
                    HorizontalAlignment="Left"
                    Margin="15,0,0,2">
                            <Image Source="/Image/save.png" Width="24" Height="24"/>
                        </Button>
                    </Grid>
                </ToolBar>
            </ToolBarTray>
            <Label Content="Имя громкоговорителя" HorizontalAlignment="Left" Margin="70,0,0,0" VerticalAlignment="Center" Grid.Row="1" Height="26" Width="274"/>
            <Label Content="Электрическая паспортная (подводимая) мощность:" HorizontalAlignment="Left" Margin="71,0,0,0" VerticalAlignment="Center" Grid.Row="2" Height="26" Width="299"/>
            <TextBox x:Name="tbName" Grid.Column="1" VerticalContentAlignment="Center" Height="22" Margin="5,2,71,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="cbName" SelectionChanged="cbName_SelectionChanged" Grid.Column="1" VerticalContentAlignment="Center" Height="22" Margin="5,2,71,0" Grid.Row="1" HorizontalContentAlignment="Center" ItemsSource="{Binding Speaker}" DisplayMemberPath="Name" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <TextBox x:Name="tb_P_Vt" Grid.Column="1" VerticalContentAlignment="Center" Height="24" Margin="5,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" Width="54"/>
            <Label Content="Вт" Margin="75,0,0,0" VerticalAlignment="Center" Grid.Row="2" Height="26" Grid.Column="1" HorizontalAlignment="Left" Width="29"/>
            <DataGrid x:Name="DataGrid" Loaded="DataGrid_Loaded"
              Grid.Row="3"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserReorderColumns="False"
              CanUserResizeRows="False"
              HeadersVisibility="All"
              SelectionUnit="Cell"
              Margin="71,10,71,0" PreviewMouseWheel="DataGrid_PreviewMouseWheel" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.ColumnSpan="3" Grid.RowSpan="5" PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.CellStyle>
                <!-- Стиль для столбцов -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="BorderBrush" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
