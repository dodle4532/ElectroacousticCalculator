<UserControl x:Class="Calculator.Views.SaveCalculationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Views"
             mc:Ignorable="d" Height="280" Width="560">
    <Border BorderBrush="#FF007ACC" 
    BorderThickness="2" 
    CornerRadius="5" 
    Padding="15" 
    Margin="5">

        <Border 
          BorderBrush="#FF007ACC" 
          BorderThickness="1"
            CornerRadius="5"
          Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Content="Введите наименование рассчета"  VerticalContentAlignment="Center" FontSize="20" HorizontalContentAlignment="Center"  FontWeight="Bold" Margin="70,10,70,2"/>
                <TextBox x:Name="tbName" HorizontalContentAlignment="Left"  VerticalContentAlignment="Center" Grid.Row="1" Margin="90,10,90,10"/>
                <Button Content="Сохранить" Height="NaN" FontSize="20" x:Name="btLoad" Click="btSave_Click" Grid.Row="2" Margin="168,15,168,10" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Border>
</UserControl>
